@functions
{
    [BindProperty]
    public string UserName { get; set; }

    [BindProperty]
    public string Password { get; set; }

    public class UserInfo
    {
        public string UserHex { get; set; }

        public string SHex { get; set; }

        public string VHex { get; set; }
    }

    public IActionResult OnPost([FromBody] UserInfo userInfo)
    {
        // redirect to the get handler of the current page
        return RedirectToPage();
    }

    public IActionResult OnPostAddAccount(string user = null, string s = null, string v = null)
    {
        return RedirectToPage();
    }

    public IActionResult OnGetAddAccount(string user, string s, string v)
    {
        return RedirectToPage();
    }
}
<h1>Register new user</h1>

@using (Html.BeginForm(FormMethod.Post))
{
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="col-md-2 control-label">User name</label>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <label asp-for="Password" class="col-md-2 control-label">Password</label>
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-primary"
                    onclick="$u.crypto.srp.AddAccount(
                                $.find('input#UserName')[0].value,
                                $.find('input#Password')[0].value,
                                $.find('input[name=\'__RequestVerificationToken\']')[0].value,
                                function () { console.log('oops'); }); return false;">Register</button>
        </div>
    </div>
}

